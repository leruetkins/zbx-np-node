{
  "name": "zbx-np-node",
  "version": "1.0.0",
  "description": "Node.js rewrite of the zbx-np Rust project - A lightweight Zabbix data relay service",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon src/app.js",
    "dist": "electron-builder --win portable",
    "dist:zip": "electron-builder --win zip",
    "dist:linux": "electron-builder --linux AppImage",
    "dist:linux-dir": "electron-builder --linux dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "zabbix",
    "mqtt",
    "monitoring",
    "iot",
    "data-relay"
  ],
  "author": "zbx-np Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "express-basic-auth": "^1.2.1",
    "mqtt": "^5.5.0",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "build": {
    "appId": "com.zbxnp.node",
    "productName": "zbx-np-node",
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "icon.png",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
    "icon": "icon.png",
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      }
    ],
    "category": "Utility"
  },
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    }
  }
}
